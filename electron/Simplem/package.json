{
  "name": "simplem",
  "version": "1.0.0",
  "description": "Minimal notepad-like markdown editor. To write down your amazing ideas immediately.",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-mac": "electron-builder --mac --x64"
  },
  "keywords": [],
  "author": "isahamawan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:isahamawan/Simplem.git"
  },
  "bugs": {
    "url": "https://github.com/isahamawan/Simplem/issues"
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.electron.Simplem",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "",
      "target": "dir"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}