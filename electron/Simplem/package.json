{
  "name": "simplem",
  "version": "1.0.0",
  "description": "Minimal notepad-like markdown editor. To write down your amazing ideas immediately.",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-mac": "electron-builder --mac --x64"
  },
  "keywords": [],
  "author": "isahamawan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:isahamawan/Simplem.git"
  },
  "bugs": {
    "url": "https://github.com/isahamawan/Simplem/issues"
  },
  "devDependencies": {
    "about-window": "^1.14.0",
    "commander": "^5.1.0",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-in-page-search": "^1.3.2"
  },
  "build": {
    "appId": "com.electron.Simplem",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/s_icon.png"
    },
    "win": {
      "target": "dir",
      "icon": "assets/s_icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
