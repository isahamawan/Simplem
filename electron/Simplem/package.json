{
  "name": "Simplem",
  "version": "1.0.0",
  "description": "Minimal notepad-like markdown editor. To write down your amazing ideas immediately.",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-mac": "electron-builder --mac --x64"
  },
  "keywords": [],
  "author": "isahamawan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:isahamawan/Simplem.git"
  },
  "bugs": {
    "url": "https://github.com/isahamawan/Simplem/issues"
  },
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "com.electron.Simplem",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dir",
      "icon": "assets/s_icon.png",
      "extendInfo": {
        "CFBundleName": "Simplem",
        "CFBundleDisplayName": "Simplem",
        "CFBundleExecutable": "Simplem",
        "CFBundlePackageType": "APPL",
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Text Files",
            "CFBundleTypeRole": "Editor",
            "CFBundleTypeExtensions": [
              "markdown",
              "md",
              "txt",
              "html"
            ],
            "LSHandlerRank": "Default"
          }
        ]
      }
    },
    "win": {
      "target": "dir",
      "icon": "assets/s_icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "about-window": "^1.14.0",
    "electron-in-page-search": "^1.3.2",
    "electron-log": "^4.3.5"
  }
}